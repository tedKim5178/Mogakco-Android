<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:foregroundGravity="center"
        android:id="@+id/profile_image_in_fragment_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:text="Name"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/show_name_in_fragment_profile"/>
        <EditText
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_name_edittext_in_fragment_profile"/>
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit_black_in_profile24dp"
            android:id="@+id/update_name_button_in_fragment_profile" />
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/set_up_name_button_in_fragment_profile"
            android:background="@drawable/ic_set_up_in_fragment_profile_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Email"
            android:layout_height="wrap_content"
            android:id="@+id/show_email_in_fragment_profile"/>
        <EditText
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_email_edittext_in_fragment_profile"/>
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit_black_in_profile24dp"
            android:id="@+id/update_email_button_in_fragment_profile" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/set_up_email_button_in_fragment_profile"
            android:background="@drawable/ic_set_up_in_fragment_profile_24dp" />
    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_in_fragment_profile">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>